<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="16">
	<fx:Script>
		<![CDATA[
			import flashx.textLayout.conversion.TextConverter;
			
			[Bindable]
			private var _sHtml:String = "";
			
			public function setMessage(notiMessage:String):void{
				_sHtml = notiMessage;
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:RichText id="message" color="0xffffff" textFlow="{TextConverter.importToFlow(this._sHtml, TextConverter.TEXT_FIELD_HTML_FORMAT)}"/>
</s:VGroup>
